filetype off
set rtp+=/usr/share/vim/vimfiles/
set rtp+=$XDG_CONFIG_HOME/vim/bundle/vundle/
set rtp+=$XDG_CONFIG_HOME/vim/eclim

silent call vundle#rc("$XDG_CONFIG_HOME/vim/bundle")

if exists(":Bundle")
	" let Vundle manage Vundle
	" required! 
	Bundle 'gmarik/vundle'

	" general purpose
	Bundle 'tpope/vim-speeddating'
	Bundle 'tpope/vim-abolish'
	Bundle 'tpope/vim-repeat'
	Bundle 'tpope/vim-surround'
	Bundle 'tpope/vim-unimpaired'
	Bundle 'tpope/vim-obsession'
	Bundle 'tpope/vim-characterize'
	Bundle 'tpope/vim-eunuch'
	Bundle 'tpope/vim-commentary'
	Bundle 'mattn/zencoding-vim'
	Bundle 'dkasak/manpageview'
	Bundle 'majutsushi/tagbar'
	Bundle 'ConradIrvin/vim-comment-object'
	Bundle 'nathanaelkane/vim-indent-guides'
	Bundle 'mhinz/vim-signify'
	Bundle 'SirVer/ultisnips'
	Bundle 'scrooloose/syntastic'
	Bundle 'Lokaltog/vim-easymotion'
	Bundle 'Shougo/vimproc.vim'
	Bundle 'Shougo/unite.vim'

	" vimscripts repos
	Bundle 'L9'
	Bundle 'Command-T'
	Bundle 'FuzzyFinder'
	Bundle 'vimomni'
	Bundle 'Super-Shell-Indent'
	Bundle 'argtextobj.vim'
	Bundle 'skeleton'
	Bundle 'vim-gnupg'

	" ruby
	Bundle 'depuracao/vim-rdoc'
	Bundle 'vim-ruby/vim-ruby'
	Bundle 'tpope/vim-rails'
	Bundle 'tpope/vim-rake'
	Bundle 'ri-browser'

	" git
	Bundle 'tpope/vim-fugitive'
	Bundle 'gregsexton/gitv'

	" C
	Bundle 'SDL-library-syntax-for-C'
	Bundle 'OmniCppComplete'


	" other filetype specific plugins

	Bundle 'tpope/vim-markdown'
	Bundle 'octave.vim'
	Bundle 'LaTeX-Box-Team/LaTeX-Box'

	filetype indent plugin on

else
	echo "Vundle not set up. Git modules initialized?"
endif

set rtp-=~/.vim | set rtp^=~/.config/vim
" vim:ft=vim foldmethod=marker
